rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Letters collection - allow read for everyone, write for authenticated users or anyone
    match /letters/{letterId} {
      allow read: if true;
      allow write: if true; // Change to "if request.auth != null" for production
    }
    
    // Books collection
    match /books/{bookId} {
      allow read: if true;
      allow write: if true; // Change to "if request.auth != null" for production
    }
    
    // Reading progress collection
    match /readingProgress/{progressId} {
      allow read, write: if true;
    }
  }
}