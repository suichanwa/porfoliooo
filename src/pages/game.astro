---
import BaseLayout from "../layouts/BaseLayout.astro";
import { backgroundsscroll } from "../game/utils/backgroundsscroll";

const previewBackground = backgroundsscroll();
---

<BaseLayout title="Game Arcade | My Portfolio">
  <section class="arcade-section">
    <div class="container">
      <div class="hero-header">
        <p class="hero-subtitle">
          Pick a world, press start, and jump into experimental game prototypes
        </p>
      </div>

      <div class="games-grid">
        <a class="game-card live" href="/game/mystic-ruins">
          <div class="card-header" style={`background-image: url(${previewBackground});`}>
            <span class="status-badge live-badge">Play Now</span>
          </div>
          <div class="card-content">
            <h3 class="game-title">Mystic Ruins</h3>
            <p class="game-description">
              Turn-based battles, pixel ambiance, and a cursed dungeon crawl
            </p>
            <div class="game-tags">
              <span class="tag">Keyboard</span>
              <span class="tag">Single Player</span>
            </div>
          </div>
          <div class="card-glow"></div>
        </a>
      </div>

      <div class="info-note">
        <p>âœ¨ New game prototypes drop here first. Stay tuned for updates!</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .arcade-section {
    min-height: 100vh;
    padding: 8rem 1.5rem 4rem;
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-header {
    text-align: center;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--text-dark-bg);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .game-card {
    position: relative;
    background: rgba(var(--primary-bg-rgb), 0.6);
    border: 1px solid rgba(var(--primary-accent-rgb), 0.2);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    animation: fadeInUp 0.8s ease-out backwards;
  }

  .game-card:nth-child(1) { animation-delay: 0.1s; }

  .game-card.live:hover {
    transform: translateY(-8px);
    border-color: rgba(var(--primary-accent-rgb), 0.6);
    box-shadow: 
      0 20px 60px rgba(var(--primary-accent-rgb), 0.3),
      0 0 40px rgba(var(--primary-accent-rgb), 0.1);
  }

  .card-header {
    height: 200px;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
    background-size: cover;
    background-position: center;
  }

  .card-header::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.03) 10px,
      rgba(255, 255, 255, 0.03) 20px
    );
    animation: shimmer 20s linear infinite;
  }

  .status-badge {
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    z-index: 1;
    backdrop-filter: blur(10px);
  }

  .live-badge {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: rgba(var(--text-dark-bg), 0.9);
    opacity: 0.9;
    box-shadow:
      0 0 18px rgba(120, 180, 255, 0.25),
      inset 0 0 10px rgba(255, 255, 255, 0.08);
    text-transform: none;
    letter-spacing: 0.08em;
    cursor: pointer;
    transition: transform 0.3s ease, opacity 0.3s ease, box-shadow 0.3s ease;
    animation: starPulse 2.8s ease-in-out infinite;
  }

  .game-card:hover .live-badge {
    opacity: 1;
    transform: translateY(-2px) scale(1.03);
    box-shadow:
      0 0 26px rgba(120, 180, 255, 0.45),
      inset 0 0 12px rgba(255, 255, 255, 0.12);
  }

  .card-content {
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .game-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-dark-bg);
  }

  .game-description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(var(--text-dark-bg), 0.7);
    margin: 0;
    flex: 1;
  }

  .game-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: auto;
  }

  .tag {
    padding: 0.4rem 0.8rem;
    background: rgba(var(--primary-accent-rgb), 0.15);
    border: 1px solid rgba(var(--primary-accent-rgb), 0.3);
    border-radius: 50px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--primary-accent);
  }

  .card-glow {
    position: absolute;
    inset: 0;
    opacity: 0;
    background: radial-gradient(
      circle at center,
      rgba(var(--primary-accent-rgb), 0.1) 0%,
      transparent 70%
    );
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .game-card.live:hover .card-glow {
    opacity: 1;
  }

  .info-note {
    text-align: center;
    padding: 2rem;
    background: rgba(var(--primary-accent-rgb), 0.05);
    border: 1px solid rgba(var(--primary-accent-rgb), 0.2);
    border-radius: 15px;
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }

  .info-note p {
    margin: 0;
    color: rgba(var(--text-dark-bg), 0.8);
    font-size: 0.95rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 20px rgba(var(--primary-accent-rgb), 0.4);
    }
    50% {
      box-shadow: 0 0 30px rgba(var(--primary-accent-rgb), 0.6);
    }
  }

  @keyframes starPulse {
    0%, 100% {
      opacity: 0.85;
      transform: translateY(0);
    }
    50% {
      opacity: 1;
      transform: translateY(-1px);
    }
  }

  @keyframes shimmer {
    0% {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .arcade-section {
      padding: 6rem 1rem 3rem;
    }

    .hero-header {
      margin-bottom: 3rem;
    }

    .games-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .card-header {
      height: 150px;
    }

    .card-content {
      padding: 1.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .game-card,
    .hero-header,
    .info-note,
    .card-header::before {
      animation: none;
    }

    .game-card {
      transition: none;
    }
  }
</style>
