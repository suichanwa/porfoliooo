---
import BaseLayout from "../layouts/BaseLayout.astro";
import VoidBackground from "../components/VoidBackground.astro";
---

<BaseLayout title="About Me | My Portfolio" useVoidBackground={true}>
  <VoidBackground starCount={350} />
  
  <div class="void-page">
    <!-- About Me - Top Left corner label (fixed positioning) -->
    <span class="page-label">About Me</span>
    
    <!-- Main content area -->
    <main class="void-main">
      <div class="text-block" data-depth="1">
        <p class="void-text primary">
          I'm a fullstack developer who finds peace in the quiet complexity of code.
        </p>
      </div>
      
      <div class="text-block" data-depth="2">
        <p class="void-text">
          Like the Boötes Void, I appreciate the beauty in emptiness — 
          clean code, minimal design, purposeful functionality.
        </p>
      </div>
      
      <div class="text-block" data-depth="3">
        <p class="void-text dim">
          When I'm not lost in code, I'm lost in GregTech New Horizons, 
          building elaborate automation systems that mirror my development philosophy.
        </p>
      </div>
      
      <div class="text-block" data-depth="4">
        <p class="void-text dimmer">
          TypeScript · React · Node.js — my tools for shaping the digital void.
        </p>
      </div>
      
      <div class="text-block" data-depth="5">
        <p class="void-text dimmest">
          Sometimes the most profound things exist in the spaces between.
        </p>
      </div>
    </main>
    
    <!-- Bottom navigation links -->
    <nav class="void-nav">
      <a href="/write-letter" class="nav-link">write to me</a>
      <span class="nav-dot"></span>
      <a href="/diary" class="nav-link">read my thoughts</a>
      <span class="nav-dot"></span>
      <a href="/books" class="nav-link">see what I read</a>
    </nav>
  </div>

  <script>
    function initAboutPage() {
      const textBlocks = document.querySelectorAll('.text-block');
      
      // Fade in animation
      textBlocks.forEach((block, index) => {
        setTimeout(() => {
          (block as HTMLElement).style.opacity = '1';
        }, 600 + index * 500);
      });
      
      // Subtle parallax on mouse move - but NOT on the label
      document.addEventListener('mousemove', (e) => {
        const x = (e.clientX / window.innerWidth - 0.5) * 2;
        const y = (e.clientY / window.innerHeight - 0.5) * 2;
        
        textBlocks.forEach((block) => {
          const depth = parseFloat((block as HTMLElement).dataset.depth || '1');
          const moveX = x * depth * 3;
          const moveY = y * depth * 3;
          (block as HTMLElement).style.transform = `translate(${moveX}px, ${moveY}px)`;
        });
      });
    }
    
    document.addEventListener('DOMContentLoaded', initAboutPage);
    document.addEventListener('astro:page-load', initAboutPage);
  </script>
</BaseLayout>

<style>
  .void-page {
    min-height: 100vh;
    width: 100%;
    max-width: 100vw;
    position: relative;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
    overflow-y: auto;
    margin: 0;
    padding: 0;
  }
  
  .page-label {
    position: fixed;
    top: 5rem;
    left: 2rem;
    font-size: 0.7rem;
    font-weight: 300;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.25);
    writing-mode: vertical-rl;
    text-orientation: mixed;
    z-index: 10;
    pointer-events: none;
    transform: none !important;
    will-change: auto;
    transition: none;
  }
  
  .void-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 750px;
    width: 100%;
    margin: 0 auto;
    padding: 6rem 2rem;
    gap: 3rem;
    position: relative;
    z-index: 1;
  }
  
  .text-block {
    opacity: 0;
    transition: opacity 1.2s ease, transform 0.4s ease;
    will-change: transform, opacity;
    width: 100%;
  }
  
  .void-text {
    font-size: 1.125rem;
    line-height: 1.9;
    color: rgba(255, 255, 255, 0.65);
    text-align: center;
    font-weight: 300;
    letter-spacing: 0.015em;
  }
  
  .void-text.primary {
    font-size: 1.625rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    font-weight: 400;
  }
  
  .void-text.dim {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.05rem;
  }
  
  .void-text.dimmer {
    color: rgba(255, 255, 255, 0.35);
    font-size: 0.95rem;
  }
  
  .void-text.dimmest {
    color: rgba(255, 255, 255, 0.2);
    font-size: 0.875rem;
    font-style: italic;
  }
  
  .void-nav {
    position: fixed;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 1.5rem;
    z-index: 10;
  }
  
  .nav-link {
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.25);
    text-decoration: none;
    text-transform: lowercase;
    transition: color 0.4s ease;
  }
  
  .nav-link:hover {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .nav-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .page-label {
      position: fixed;
      top: 1.5rem;
      left: 1.5rem;
      writing-mode: horizontal-tb;
      font-size: 0.65rem;
    }
    
    .void-main {
      padding: 5rem 1.5rem;
      gap: 2.5rem;
    }
    
    .void-text {
      font-size: 1rem;
    }
    
    .void-text.primary {
      font-size: 1.25rem;
    }
    
    .void-nav {
      flex-direction: column;
      gap: 0.875rem;
      bottom: 2rem;
    }
    
    .nav-dot {
      display: none;
    }
  }
</style>