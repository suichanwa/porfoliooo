---
import BaseLayout from "../layouts/BaseLayout.astro";
import TypeWriter from "../components/TypeWriter.tsx";

// Define types for diary entries
interface DiaryEntryData {
  id: string;
  title: string;
  date: Date;
  coverImage?: string;
  tags: string[];
  content: string;
}

// Create a function to import markdown files dynamically
async function importDiaryEntries(): Promise<DiaryEntryData[]> {
  const markdownFiles = import.meta.glob<{
    frontmatter: {
      title: string;
      date: string;
      coverImage?: string;
      tags?: string[];
    };
    compiledContent: () => string;
  }>('../content/diary/*.md');
  
  const entries: DiaryEntryData[] = [];

  for (const path in markdownFiles) {
    const module = await markdownFiles[path]();
    const filename = path.split('/').pop()?.replace('.md', '') || '';
    
    // Extract metadata and content from the markdown file
    entries.push({
      id: filename,
      title: module.frontmatter.title || filename,
      date: new Date(module.frontmatter.date),
      coverImage: module.frontmatter.coverImage,
      tags: module.frontmatter.tags || [],
      content: module.compiledContent()
    });
  }

  // Sort entries by date (newest first)
  return entries.sort((a, b) => b.date.getTime() - a.date.getTime());
}

// Get all diary entries
const diaryEntries = await importDiaryEntries();

// Get the entry ID from the URL or use the first entry
const urlParams = new URL(Astro.request.url).searchParams;
const currentEntryId = urlParams.get('entry') || diaryEntries[0]?.id || "";
---

<BaseLayout title="My Diary | My Portfolio">
  <section class="relative py-12 px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold mb-4 min-h-[3rem]">
          <TypeWriter 
            client:load 
            text="My Developer Diary" 
            speed={80} 
            delay={500}
            className="bg-gradient-to-r from-primary-accent to-secondary-accent bg-clip-text text-transparent"
          />
        </h1>
        <p class="text-base-content/70">Documenting my coding journey and thoughts</p>
      </div>

      <div class="flex flex-col lg:flex-row gap-8">
        {/* Sidebar - Entry List */}
        <aside class="lg:w-1/3">
          <div class="bg-base-200 rounded-xl p-4 sticky top-24">
            <h2 class="font-bold text-lg mb-4">Recent Entries</h2>
            <div class="space-y-2 max-h-[60vh] overflow-y-auto">
              {diaryEntries.map((entry) => (
                <a
                  href={`/diary?entry=${entry.id}`}
                  class={`block p-3 rounded-lg transition-all hover:bg-base-300 ${
                    entry.id === currentEntryId ? 'bg-primary/20 border-l-4 border-primary' : ''
                  }`}
                  data-entry-index={entry.id}
                >
                  <div class="flex items-center gap-2 mb-1">
                    <h3 class="font-medium text-sm flex-1">{entry.title}</h3>
                  </div>
                  <p class="text-xs text-base-content/60">
                    {entry.date.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </p>
                  {entry.tags.length > 0 && (
                    <div class="flex flex-wrap gap-1 mt-2">
                      {entry.tags.map((tag: string) => (
                        <span class="text-xs px-2 py-0.5 bg-primary/10 rounded-full text-primary">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </a>
              ))}
            </div>
          </div>
        </aside>

        {/* Main Content - Selected Entry */}
        <main class="lg:w-2/3">
          {diaryEntries.map((entry) => (
            <article
              class={`diary-entry-content ${entry.id === currentEntryId ? 'block' : 'hidden'}`}
              data-entry-id={entry.id}
            >
              {/* Cover Image */}
              {entry.coverImage && (
                <div class="w-full h-64 mb-6 rounded-xl overflow-hidden">
                  <img 
                    src={entry.coverImage} 
                    alt={entry.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}

              {/* Entry Header */}
              <header class="mb-6">
                <div class="flex items-center gap-3 mb-3">
                  <div>
                    <h1 class="text-3xl font-bold">{entry.title}</h1>
                    <p class="text-base-content/60">
                      {entry.date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </p>
                  </div>
                </div>

                {/* Tags */}
                {entry.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {entry.tags.map((tag: string) => (
                      <span class="px-3 py-1 bg-primary/20 text-primary rounded-full text-sm">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}
              </header>

              {/* Entry Content */}
              <div class="diary-content prose prose-invert max-w-none" set:html={entry.content} />
            </article>
          ))}
        </main>
      </div>
    </div>
  </section>

  <script>
    // Add smooth scroll behavior for entry navigation
    document.addEventListener('DOMContentLoaded', () => {
      const entryLinks = document.querySelectorAll('[data-entry-index]');
      
      entryLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const entryId = (link as HTMLElement).getAttribute('data-entry-index');
          
          // Hide all entries
          document.querySelectorAll('.diary-entry-content').forEach((entry) => {
            (entry as HTMLElement).style.display = 'none';
          });
          
          // Show selected entry with animation
          const selectedEntry = document.querySelector(`[data-entry-id="${entryId}"]`);
          if (selectedEntry) {
            (selectedEntry as HTMLElement).style.display = 'block';
            (selectedEntry as HTMLElement).style.opacity = '0';
            (selectedEntry as HTMLElement).style.transform = 'translateY(20px)';
            
            requestAnimationFrame(() => {
              (selectedEntry as HTMLElement).style.transition = 'all 0.3s ease';
              (selectedEntry as HTMLElement).style.opacity = '1';
              (selectedEntry as HTMLElement).style.transform = 'translateY(0)';
            });
          }
          
          // Update URL without page reload
          const url = new URL(window.location.href);
          url.searchParams.set('entry', entryId || '');
          window.history.pushState({}, '', url);
        });
      });
    });
  </script>
</BaseLayout>

<style is:global>
  /* Custom styling for markdown content */
  .diary-content {
    color: var(--text-dark-bg);
  }
  
  .diary-content h1, 
  .diary-content h2, 
  .diary-content h3, 
  .diary-content h4 {
    color: var(--primary-accent);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .diary-content a {
    color: var(--secondary-accent);
    text-decoration: underline;
  }
  
  .diary-content p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .diary-content hr {
    border-color: rgba(var(--primary-accent-rgb), 0.3);
    margin: 2rem 0;
  }
  
  .diary-content blockquote {
    border-left: 4px solid var(--primary-accent);
    padding-left: 1rem;
    font-style: italic;
    color: rgba(var(--text-dark-bg), 0.8);
  }
  
  .diary-content code {
    background: rgba(var(--primary-accent-rgb), 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .diary-content pre {
    background: rgba(var(--primary-bg-rgb), 0.8);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  
  .diary-content ul li::marker {
    color: var(--primary-accent);
  }
  
  .diary-content ol li::marker {
    color: var(--primary-accent);
  }
  
  .diary-content img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }
  
  .diary-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .diary-content th {
    background: rgba(var(--primary-accent-rgb), 0.2);
    padding: 0.75rem;
    text-align: left;
  }
  
  .diary-content td {
    padding: 0.75rem;
    border-bottom: 1px solid rgba(var(--primary-accent-rgb), 0.1);
  }
</style>

<style>
  [data-scroll] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  [data-entry-index] {
    transition: all 0.2s ease;
  }
  
  [data-entry-index].is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  .diary-entry-content {
    animation: fadeIn 0.3s ease;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

