---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PlanetariumBackground, PlanetariumViewer } from "../components/Planetarium";
---

<BaseLayout title="Planetarium | My Portfolio" useVoidBackground={true}>
  <PlanetariumBackground client:load />
  <section class="planetarium-section">
    <PlanetariumViewer className="planetarium-viewer-full" />
  </section>
</BaseLayout>

<style>
  .planetarium-section {
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: grid;
    place-items: center;
    padding: 0;
  }

  .planetarium-viewer-full {
    width: 100%;
    height: 100vh;
    display: grid;
    place-items: center;
    text-align: center;
    padding: 0 1.5rem;
  }

  .planetarium-viewer-full .viewer-content {
    background: rgba(8, 12, 20, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 18px;
    padding: 2.5rem 3rem;
    backdrop-filter: blur(12px);
    max-width: 560px;
  }

  .planetarium-viewer-full h2 {
    margin-bottom: 0.75rem;
  }

  .planetarium-viewer-full p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .planetarium-viewer-full .viewer-content {
      padding: 2rem 1.5rem;
    }
  }
</style>
