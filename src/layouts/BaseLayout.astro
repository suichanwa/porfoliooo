---
import Navigation from "../components/Navigation";
import StarryBackground from "../components/Starry";
import "../styles/global.css";

interface Props {
  title: string;
  useVoidBackground?: boolean;
  enableNeptuneTransition?: boolean;
  neptuneSectionId?: string;
}

const { title, useVoidBackground = false, enableNeptuneTransition = false, neptuneSectionId = 'neptune-widget' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My personal portfolio" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#0f1123" />
    <link rel="icon" type="image/jpg" href="/images/pfp.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={useVoidBackground ? 'void-body' : 'starry-body'}>
    <!-- Only render StarryBackground if NOT using void background -->
    {!useVoidBackground && <StarryBackground client:load enableNeptuneTransition={enableNeptuneTransition} neptuneSectionId={neptuneSectionId} />}
    
    <Navigation client:load />
    
    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Ensure proper stacking context for both layouts */
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    min-height: 100vh;
  }

  /* For pages using StarryBackground */
  .starry-body {
    position: relative;
  }

  /* For pages using VoidBackground */
  .void-body {
    position: relative;
    background: #000000;
  }

  .main-content {
    position: relative;
    z-index: 1;
    min-height: 100vh;
  }
</style>
